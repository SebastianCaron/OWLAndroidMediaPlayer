<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État lorsque l'élément est sélectionné -->
    <item android:color="@color/primary" android:state_checked="true" />
    <item android:color="@color/primary" android:state_active="true"/>
    <item android:color="@color/primary" android:state_selected="true"/>
    <!-- État lorsque l'élément n'est pas sélectionné -->
    <item android:color="@android:color/darker_gray" />
</selector>
