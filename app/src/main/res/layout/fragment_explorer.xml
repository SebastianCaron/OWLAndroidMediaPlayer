<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/explorer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Groupe Auteurs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- Titre "Auteurs" -->
                <TextView
                    android:id="@+id/textViewAuteurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artistes"
                    android:layout_marginLeft="20dp"
                    style="@style/BasicTitre" />

                <!-- Bouton "Plus" -->
                <Button
                    android:id="@+id/buttonPlusAuteurs"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/plus"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/rounded_button_secondary" />
            </LinearLayout>

            <!-- Grille scrollable horizontalement pour les Auteurs -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAuteurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewAuteurs"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:minHeight="300dp"
                android:overScrollMode="ifContentScrolls"/>

            <!-- Groupe Albums -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- Titre "Albums" -->
                <TextView
                    android:id="@+id/textViewAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/albums"
                    android:layout_marginLeft="20dp"
                    style="@style/BasicTitre" />

                <!-- Bouton "Plus" -->
                <Button
                    android:id="@+id/buttonPlusAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/plus"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/rounded_button_secondary" />
            </LinearLayout>

            <!-- Grille scrollable horizontalement pour les Albums -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAlbums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                app:layout_constraintTop_toBottomOf="@+id/textViewAlbums"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="100dp"
                android:minHeight="300dp"
                android:overScrollMode="always"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutMore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewBackMore"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                style="@style/fillSVG"
                android:contentDescription="@string/back"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/textViewTitleMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titre"
                style="@style/BasicTitre"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <!-- RecyclerView avec deux colonnes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="255dp"
            android:numColumns="3"
            android:stretchMode="spacingWidthUniform" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playlistPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/back"
                    style="@style/fillSVG"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageViewPlaylistCover"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/ic_note"
                    android:contentDescription="@string/cover"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewBack" />

                <TextView
                    android:id="@+id/textViewPlaylistTitre"
                    style="@style/TitreLecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/titre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewPlaylistCover" />

                <ImageButton
                    android:id="@+id/imageButtonPlaylistPlay"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_button_gradient"
                    android:src="@drawable/ic_play_bt"
                    android:contentDescription="@string/play"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPlaylistTitre" />

                <ImageView
                    android:id="@+id/imageViewPlaylistMore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/ic_more"
                    style="@style/fillSVG"
                    android:contentDescription="@string/more"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButtonPlaylistPlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageButtonPlaylistPlay"
                    app:layout_constraintTop_toTopOf="@+id/imageButtonPlaylistPlay" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPlaylistSongs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageButtonPlaylistPlay"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
